{
    "tasks": [
        {
            "type": "shell",
            "label": "Build exe",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                // "-std=c++11",
                "-O2",
                // "-Wall",
                "-I",
                "${workspaceFolder}",
                "-g",
                "${file}",
                "-static-libstdc++",
                "-static-libgcc",
                "-o",
                "${workspaceFolder}/build/bin/${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build dll",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-std=c++11",
                "-O2",
                // "-Wall",
                "-g",
                "${workspaceFolder}/src/tafelParams.cpp",
                "-static-libstdc++",
                "-static-libgcc",
                "-shared",
                "-o",
                "${workspaceFolder}/build/bin/tafelParams.dll"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}